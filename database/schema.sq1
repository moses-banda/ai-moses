CREATE TABLE caller_profiles (
    id SERIAL PRIMARY KEY,
    phone_number VARCHAR(20) UNIQUE NOT NULL,
    name VARCHAR(100),
    relationship VARCHAR(50),  -- friend, family, professor, recruiter
    tone VARCHAR(100),         -- formal, casual, technical
    usual_topics TEXT,         -- comma-separated
    created_at TIMESTAMP DEFAULT NOW()
);

CREATE TABLE status (
    id SERIAL PRIMARY KEY,
    activity VARCHAR(200),
    updated_at TIMESTAMP DEFAULT NOW()
);

CREATE TABLE call_logs (
    id SERIAL PRIMARY KEY,
    caller_phone VARCHAR(20),
    caller_name VARCHAR(100),
    duration INT,
    transcript TEXT,
    response_given TEXT,
    created_at TIMESTAMP DEFAULT NOW()
);

CREATE TABLE personality_data (
    id SERIAL PRIMARY KEY,
    vocab_patterns TEXT,
    tone_markers TEXT,
    common_phrases TEXT,
    speaking_style TEXT,
    created_at TIMESTAMP DEFAULT NOW()
);
